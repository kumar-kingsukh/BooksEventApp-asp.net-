@model IEnumerable<EventApplication.Models.CommentViewModel>

@{
    Layout = "";
}

@if (Model != null)
{
    <h3>Comments</h3>

    foreach (var item in Model)
    {
        <div>
            <h4>@item.UserName</h4>
            <p>@item.Comment</p>
            <p>
                @item.Date
                <span>
                    @if (User.Identity.IsAuthenticated && item.UserId == User.Identity.Name.Split('|')[1].AsInt())
                    {
                        @Html.ActionLink("Delete", "DeleteComment", new { id = item.Id , eventId = item.EventId })
                    }
                </span>
            </p>
        </div>
    }
}



